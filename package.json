        "sass-loader": "^7.1.0",
        "webpack": "^4.30.0",
        "webpack-cli": "^3.3.1"
    },
    "scripts": {
        "dev:server": "nodemon --exec babel-node src/init.js --delay 2 --ignore '.scss' --ignore 'static' ",
        "dev:assets": "cd src && WEBPACK_ENV=development webpack -w",
        "build:assets": "cd src && WEBPACK_ENV=production webpack",
        "build:server": "babel src --out-dir build --ignore 'src/assets','src/static','src/webpack.config.js'",
        "copyAll": "cp -R src/static build && cp -R src/views build",
        "build": "yarn build:server && yarn build:assets && yarn copyAll",
        "prebuild": "rm -rf build",
        "tunnel": "lt --port 4000",
        "start": "node build/init.js"
    },
    "devDependencies": {
        "@babel/cli": "^7.6.4",
        "@babel/core": "^7.6.4",
        "@babel/preset-env": "^7.6.3",
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-plugin-import": "^2.17.2",
        "eslint-plugin-prettier": "^3.0.1",
        "gulp-babel": "^8.0.0",
        "nodemon": "^1.18.10",
        "prettier": "^1.17.0"
    }
