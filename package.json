        "dotenv": "^7.0.0",
        "express": "^4.16.4",
        "express-session": "^1.16.2",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "get-blob-duration": "^1.1.0",
        "helmet": "^3.15.1",
        "install": "^0.13.0",
        "lodash": "^4.17.14",
        "mongoose": "^5.4.22",
        "morgan": "^1.9.1",
        "multer": "^1.4.1",
        "multer-s3": "^2.9.0",
        "node-sass": "^4.12.0",
        "passport": "^0.4.0",
